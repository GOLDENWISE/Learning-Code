<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!--data objek dari javascript yang diterima-->
    <title><%= title %></title>
  </head>
  <body>
    <h1>HELLO, WORLD!</h1>
    <h3>links:</h3>
    <ul>
      <li>
        <a href="/">THIS WEB</a>
      </li>
      <li>
        <a href="/about">About</a>
      </li>
      <li>
        <a href="/contact">contact</a>
      </li>
      <li>
        <a href="/MyAPI">My API</a>
      </li>
      <li>
        <a href="/product/12?category=baju">Produk baju</a>
      </li>
    </ul>
    <!--Mendeklarasikan nama variabel, sama seperti syntax javascript-->
    <% const nama = 'Golden Wise' %>
    <!--mengeluarkan output dari variabel nama-->
    <h2>Halo, <%= nama %>!</h2>
    <!--variabel yang dikirimkan dari javascript-->
    <h2>Selamat <%= waktu + ', ' + nama %></h2>

    <h4>Daftar Mahasiswa</h4>
    <!--pengulangan menggunakan express view engine-->
    <% dataMahasiswa.forEach(e => { %>
    <ul>
      <li>Nama: <%= e.nama %></li>
      <li>Nim: <%= e.nim %></li>
      <li>Semester: <%= e.semester %></li>
    </ul>
    <% }) %>
  </body>
</html>
